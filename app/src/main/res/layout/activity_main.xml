<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageview"
        android:layout_width="400px"
        android:layout_height="400px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:src="@mipmap/imc_launcher" />

    <EditText
        android:id="@+id/edittext_peso"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:layout_marginTop="300dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ex: 79.5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edittext_peso"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:text="Kg"/>


    <TextView
        android:id="@+id/pesopalavra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100sp"
        android:layout_below="@+id/edittext_peso"
        android:textSize="20sp"
        android:text="  Peso" />


    <EditText
        android:id="@+id/edittext_altura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext_peso"
        android:layout_marginTop="100dp"
        android:hint="Ex: 1.75"
        android:inputType="numberDecimal"
        android:maxLength="4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edittext_altura"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:text="m" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100sp"
        android:layout_below="@+id/edittext_altura"
        android:textSize="20sp"
        android:text="  Altura" />

    <Button
        android:id="@+id/btnCalcular"
        android:text="Calcular"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="20sp"
        android:textStyle="bold"/>



</RelativeLayout>